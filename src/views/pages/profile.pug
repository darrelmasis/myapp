extends ../templates/template
append config
  - pageTitle= `${customer.customerCode}`
  -let type = customer.type
block main
  include ../layout/header
  .container.mt-3
    .row
      .col-md-3
        .card.text-center.bg-white.rounded.border.mb-3
          .card-body
            .image-large
              img(src="/dist/assets/defect.png" alt="foto del cliente").w-100
            .mt-3 
              h1.h5.card-title= `${customer.fullName}`  
              p.fs-5.fw-semibold.text-secondary.mb-1= `${customer.customerCode }`
              p.text-muted= `Cliente desde ${customer.dateFormat(customer.admissionDate).short}`
              a(href="#").btn.btn-primary.fw-semibold Editar perfil
      .col-md-9