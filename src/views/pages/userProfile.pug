extends ../templates/template
append config
  - pageTitle= `${userProfile.fullName}`
block main
  include ../layout/header
  .container.mt-3
    .row
      .col-md-3
        .card.text-center.bg-white.rounded.border.mb-3
          .card-body
            .image-large
              if userProfile.avatar == '' || userProfile.avatar == 'avatar.png' || userProfile.avatar == null
                img(src=`../dist/assets/defect.png` alt="avatar").w-100
              else
                img(src=`${userProfile.cloud}/${userProfile.avatar}` alt="avatar").w-100
            .mt-3 
              h1.h5.card-title= `${userProfile.fullName}`  
              p.small.fw-semibold.text-secondary.mb-3= `@${userProfile.username }`
              if userProfile.bio !== null && userProfile.bio !== ''
                p.text-secondary.mb-3= `${userProfile.bio }`
              if userProfile.active 
                a(href="/editar-perfil").btn.btn-sm.btn-primary.fw-semibold
                  i.far.fa-edit.me-2
                  | Editar perfil
              else
                a(href="#").btn.btn-outline-primary.fw-semibold 
                  i.far.fa-plus.me-2 
                  | Agregar
      .col-md-9